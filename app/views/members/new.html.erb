<%= stylesheet_link_tag "members" %>
<%= render 'shared/error_messages' %>
<div class="container">
  <div class="row">
    <div class="col-lg-12 member-list">
      <h1 class="title-text">Add New Member</h1>
      <p>
        Fill in the name, email, and whether they've completed their PACE forms below!
      </p>

      <%= form_for(@member) do |f| %>
        <%= f.label :name, 'Name' %>
        <div class="form-group">
          <%= f.text_field :name, class:"form-control" %>
        </div>

        <%= f.label :email, 'Email' %>
        <div class="form-group">
          <%= f.text_field :email, class:"form-control" %>
        </div>

        <%= f.label :pace, 'Has pace?', class:"form-check-label" %>
        <div class="form-check ">
          <%= f.check_box :pace, :value => false, class:"form-check-input" %>
        </div>
        <%= link_to "Cancel", members_index_path, class:"btn btn-primary" %>
        <%= f.button :submit, class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
