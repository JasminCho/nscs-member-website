<%= stylesheet_link_tag "members" %>
<%= render 'shared/error_messages' %>
<div class="container">
  <div class="row">
    <div class="col-lg-12 member-list">
      <h1 class="title-text">Edit Member Information</h1>
      <p>
        Edit the name, email, and PACE confirmation below!
      </p>

      <%= form_for @member, url: members_url(:id => @member.id), html: {method: "put"} do |f| %>

        <%= f.label :name, 'Name' %>
        <div class="form-group">
          <%= f.text_field :name, class:"form-control" %>
        </div>

        <%= f.label :email, 'Email' %>
        <div class="form-group">
          <%= f.text_field :email, class:"form-control" %>
        </div>

        <%= f.label :pace, 'Has pace?', class:"form-check-label"%>
        <div class="form-group">
          <%= f.check_box :pace, class:"form-check-input" %>
        </div>
        <%= link_to "Cancel", members_index_path, class:"btn btn-primary" %>
        <%= f.button :submit, class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
