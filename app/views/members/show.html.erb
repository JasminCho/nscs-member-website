<p>===============================</p>
<%= "Name #{@member.name}" %>
<br/>
<%= "Email: #{@member.email}" %>
<br/>
<%= "PACE: #{@member.pace}" %>
<br/>
<%= link_to 'Edit member info', edit_members_url(:id => @member.id) %> <br>
<%= link_to 'Delete member',members_url(:id => @member.id), method: :delete %> <br>
<%= link_to 'Back to member list', members_index_url %> <br>
<%= link_to 'Show points', points_index_url(:email => @member.email)%> <br>

<!-- TODO: EDITING MEMBER'S PERSONAL PAGES -->
<%= stylesheet_link_tag "members" %>

<div class="container">
  <div class="row">
    <div class="col-lg-12 officers-text">
      <h1 class="title-text">Add New Member</h1>
      <p>
        Fill in the name, email, and whether they've completed their PACE forms below!
      </p>

      <%= form_for(@member) do |f| %>
        <%= f.label :name, 'Name' %>
        <div class="form-group">
          <%= f.text_field :name, class:"form-control" %>
        </div>

        <%= f.label :email, 'Email' %>
        <div class="form-group">
          <%= f.text_field :email, class:"form-control" %>
        </div>

        <%= f.label :pace, 'Has pace?', class:"form-check-label" %>
        <div class="form-check ">
          <%= f.check_box :pace, class:"form-check-input" %>
        </div>

        <%= f.button :submit, class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
