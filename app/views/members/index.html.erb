<%= stylesheet_link_tag "members" %>

<div class="container">
  <div class="row">
    <div class="col-lg-12 member-list">
      <h1 class="title-text">NSCS Members List</h1>
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">PACE</th>
            </tr>
          </thead>
          <% @members.each do |member| %>
            <tbody>
              <tr>
                <td><%= "#{member.name}" %> </td>
                <td><%= "#{member.email}" %></td>
                <td><%= "#{member.pace}" %></td>
                <td><%= link_to 'more', members_url(:id => member.id) %></td>
              </tr>
            </tbody>
          <% end %>
        </table>
      <%= link_to 'Add new member', new_members_url, class:"btn btn-primary" %>
    </div>
  </div>
</div>

