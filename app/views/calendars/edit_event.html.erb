
 <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
  
<%= form_for @event , url: update_event_path , method: "POST" do |event_form| %>
  <%= event_form.label :title %>
  <%= event_form.text_field :title %>
  <%= event_form.label :start_date %>
  <%= event_form.date_field :start_date %>
  <%= event_form.label :start_time%>
  <%= event_form.time_field :start_time%>
  <%= event_form.label :end_date %>
  <%= event_form.date_field :end_date %>
  <%= event_form.label :end_time%>
  <%= event_form.time_field :end_time%>
  <%= event_form.label :location %>
  <%= event_form.text_field :location %>
  <%= event_form.label :description %>
  <%= event_form.text_field :description %>
  <%= event_form.hidden_field :event_id%>
  <%= event_form.submit "Submit Changes" %>

<%end%>

