
 <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
  
<%= form_for @event , url: create_event_path  do |event_form| %>
  <%= event_form.label :title %>
  <%= event_form.text_field :title, autofocus: true, :required => 'required'%>
  <%= event_form.label :start_date %>
  <%= event_form.date_field :start_date, autofocus: true, :required => 'required' %>
  <%= event_form.label :start_time%>
  <%= event_form.time_field :start_time , autofocus: true, :required => 'required'%>
  <%= event_form.label :end_date %>
  <%= event_form.date_field :end_date , autofocus: true, :required => 'required'%>
  <%= event_form.label :end_time%>
  <%= event_form.time_field :end_time, autofocus: true, :required => 'required'%>
  <%= event_form.label :location %>
  <%= event_form.text_field :location , autofocus: true, :required => 'required'%>
  <%= event_form.label :description %>
  <%= event_form.text_field :description , autofocus: true, :required => 'required'%>
  <%= event_form.submit "Create" %>
<%end%>

