<% if @newsfeeds %>
    <% if @newsfeeds.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger">
          The form contains <%= pluralize(@newsfeeds.errors.count, "error") %>.
            <ul>
            <% @newsfeeds.errors.full_messages.each do |msg| %>
              <li><font color="red"><%= msg %></font></li>
            <% end %>
            </ul>
        </div>
      </div>
    <% end %>
<% end %>

