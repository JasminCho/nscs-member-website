<!DOCTYPE html>
<html>
  <head>
    <title>NSCS Website</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-inverted navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to "TAMU NSCS", about_path, {class: "navbar-brand"} %>
        </div>
        <div class="collapse navbar-collapse" id="collapibleMenu">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home", home_path %></li>
            <li><%= link_to "About Us", about_path %></li>
            <li><%= link_to "FAQ", faq_path %></li>
            <li><%= link_to "Officers", officers_path %></li>
            <li><%= link_to "Meetings", meetings_path %></li>
            <li><%= link_to "Points", points_path %></li>
            <li>
              <% if current_user %>
                <strong><%= current_user.name %></strong>
                <%= link_to "Sign out", signout_path, id: "sign_out" %>
              <% else %>
                <%= link_to "Sign in", "/auth/google_oauth2", id: "sign_in" %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!--  Body -->
    <div class="container bodyContent">
      <%= yield %>
    </div>

  </body>
</html>
